{
  "expo": {
    "name": "ColorSplash Kids",
    "slug": "coloring-book-app",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E3C4B"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.enigmacoder.coloringbook",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to save colored images.",
        "NSPhotoLibraryAddUsageDescription": "This app needs permission to save colored images to your photo library.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2E3C4B"
      },
      "package": "com.enigmacoder.coloringbook",
      "versionCode": 1,
      "compileSdkVersion": 33,
      "targetSdkVersion": 33,
      "buildToolsVersion": "33.0.2",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "jsEngine": "hermes",
      "enableProguardInReleaseBuilds": false,
      "enableSeparateBuildPerCPUArchitecture": false,
      "kotlinVersion": "1.9.24"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    }
  }
}
